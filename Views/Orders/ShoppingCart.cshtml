@using MovieBooking.Data.ViewModels;
@model ShoppingCartView

@{
    ViewData["Title"]="Shopping Cart Summary";
}

<div class="row">
    <div class="col-md-8 offset-2">

        <div class="text-center">
            <h2> Shopping Cart Summary</h2>
        </div>
        <table class="table">
            <thead>
                 <tr>
                    <th>Selected Amount</th>
                    <th>Movie</th>
                    <th>Price</th>
                    <th>SubTotal</th>
                    <th></th>
                 </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ShoppingCart.ShoppingCartItems){
                    <tr>
                        <td class="algin-middle">@item.Amount</td>
                         <td class="algin-middle">@item.Movie.Name</td>
                          <td class="algin-middle">@item.Movie.Price.ToString("c")</td>
                           <td class="algin-middle">@((item.Amount * item.Movie.Price).ToString("c"))</td>
                           <td class="algin-middle">
                            <a class="text-danger" asp-controller="Orders" asp-action="RemoveFromCart"
                            asp-route-id="@item.Movie.Id">
                            <i class="bi bi-cart-dash"></i></a>
                            <a class="text-success" asp-controller="Orders" asp-action="AddToCart"
                            asp-route-id="@item.Movie.Id">
                            <i class="bi bi-cart-plus"></i></a>
                           </td>
                           
                    </tr>
                }
            </tbody>
            <tfoot>
               <tr>
                <td colspan="2"></td>
                <td><b>Total:</b></td>
                <td>@Model.ShoppingCartTotal.ToString("c")</td>
                <td></td>
               </tr>
            </tfoot>
        </table>

        <div class="text-center">
            <div class="btn-group">
                <a  class="btn btn-outline-success" asp-controller="Orders" asp-action="CompleteOrder">
                  Complete Order 
                </a>
                <a class="btn btn-outline-success" asp-controller="Movies" asp-action="index">Add Items</a>

            </div>
        </div>
    </div>
</div>